        let currentSpread = null;
        let drawnCards = [];
        let shuffleCount = 0;
        let userIntention = '';
        
        function selectSpread(spreadType) {
            currentSpread = SPREADS[spreadType];
            shuffleCount = 0;
            drawnCards = [];
            
            // Show empowerment area
            document.getElementById('spreadSelection').classList.add('hidden');
            document.getElementById('empowermentArea').classList.remove('hidden');
            document.getElementById('empowermentTitle').textContent = currentSpread.title;
            document.getElementById('readingArea').classList.add('hidden');
            document.getElementById('interpretationArea').classList.add('hidden');
            
            // Reset empowerment area
            document.getElementById('intentionInput').value = '';
            document.getElementById('shuffleCount').textContent = '';
            document.getElementById('drawButton').disabled = true;
        }
        
        function shuffleDeck() {
            shuffleCount++;
            const shuffleBtn = document.getElementById('shuffleButton');
            const shuffleCountEl = document.getElementById('shuffleCount');
            const drawBtn = document.getElementById('drawButton');
            
            // Visual feedback
            shuffleBtn.classList.add('shuffling');
            setTimeout(() => shuffleBtn.classList.remove('shuffling'), 500);
            
            // Update count
            if (shuffleCount < 3) {
                shuffleCountEl.textContent = `Shuffled ${shuffleCount} time${shuffleCount > 1 ? 's' : ''}. Shuffle at least 3 times to charge the deck.`;
                shuffleCountEl.style.color = 'var(--aether-glow)';
            } else {
                shuffleCountEl.textContent = `The deck is charged with your energy. Ready to draw.`;
                shuffleCountEl.style.color = 'var(--gold-accent)';
                drawBtn.disabled = false;
            }
        }
        
        function drawCards() {
            // Capture intention
            userIntention = document.getElementById('intentionInput').value.trim();
            
            // Draw cards with reversed chance
            const shuffled = [...TAROT_DECK].sort(() => Math.random() - 0.5);
            drawnCards = shuffled.slice(0, currentSpread.count).map(card => ({
                ...card,
                isReversed: Math.random() < 0.4 // 40% chance of reversed
            }));
            
            // Update UI
            document.getElementById('empowermentArea').classList.add('hidden');
            document.getElementById('readingArea').classList.remove('hidden');
            document.getElementById('spreadTitle').textContent = currentSpread.title;
            document.getElementById('interpretationArea').classList.add('hidden');
            
            // Display cards
            const cardArea = document.getElementById('cardArea');
            cardArea.innerHTML = '';
            
            // Use smaller cards only for Celtic Cross
            const cardClass = currentSpread.count === 10 ? 'tarot-card small' : 'tarot-card';
            
            drawnCards.forEach((card, index) => {
                const cardEl = document.createElement('div');
                cardEl.className = `${cardClass} pos-${index + 1}`;
                cardEl.innerHTML = `
                    <div class="card-position">${currentSpread.positions[index]}</div>
                    <div class="card-name">${card.name}${card.isReversed ? ' (R)' : ''}</div>
                    <div class="card-themes">${card.themes}</div>
                `;
                cardArea.appendChild(cardEl);
            });
        }
        
        function getMoonPhase() {
            const today = new Date();
            const year = today.getFullYear();
            let month = today.getMonth() + 1;
            const day = today.getDate();
            
            // Simplified moon phase calculation
            let c = 0, e = 0, jd = 0, b = 0;
            let adjustedYear = year;
            
            if (month < 3) {
                adjustedYear--;
                month += 12;
            }
            
            ++month;
            c = 365.25 * adjustedYear;
            e = 30.6 * month;
            jd = c + e + day - 694039.09;
            jd /= 29.5305882;
            b = parseInt(jd);
            jd -= b;
            b = Math.round(jd * 8);
            
            if (b >= 8) b = 0;
            
            const phases = [
                { name: "New Moon", description: "New beginnings, setting intentions, planting seeds. The dark moon invites introspection.", emoji: "🌑" },
                { name: "Waxing Crescent", description: "Growth, momentum building, taking action. Your intentions begin to take form.", emoji: "🌒" },
                { name: "First Quarter", description: "Challenges arise, decisions needed. Push through resistance.", emoji: "🌓" },
                { name: "Waxing Gibbous", description: "Refinement, adjustment, preparation. Nearly there—stay focused.", emoji: "🌔" },
                { name: "Full Moon", description: "Culmination, celebration, illumination. Everything revealed in moonlight.", emoji: "🌕" },
                { name: "Waning Gibbous", description: "Gratitude, sharing wisdom, giving back. Harvest what you've grown.", emoji: "🌖" },
                { name: "Last Quarter", description: "Release, forgiveness, letting go. Release what no longer serves.", emoji: "🌗" },
                { name: "Waning Crescent", description: "Rest, reflection, surrender. Prepare for renewal.", emoji: "🌘" }
            ];
            
            return phases[b];
        }
        
        function getCrystalRecommendations() {
            if (!currentSpread.crystals) return [];
            return currentSpread.crystals.map(key => CRYSTALS[key]);
        }
        
        function getInterpretation() {
            const interpretationArea = document.getElementById('interpretationArea');
            interpretationArea.classList.remove('hidden');
            interpretationArea.innerHTML = '<div class="loading">Weaving the threads of meaning...</div>';
            
            // Get moon phase
            const moonPhase = getMoonPhase();
            const crystals = getCrystalRecommendations();
            
            // Build interpretation from traditional meanings
            let interpretationHTML = '<div class="interpretation">';
            interpretationHTML += '<h3>Guidance from the Aether</h3>';
            
            // Financial disclaimer if needed
            if (currentSpread.disclaimer) {
                interpretationHTML += '<div class="disclaimer">⚠️ This reading is for personal reflection only and does not constitute financial advice. Please consult a qualified financial professional for monetary decisions.</div>';
            }
            
            // Show moon phase
            interpretationHTML += `<div style="text-align: center; margin: 2rem 0; padding: 1.5rem; background: rgba(74, 63, 110, 0.3); border-radius: 8px;">`;
            interpretationHTML += `<div style="font-size: 2rem; margin-bottom: 0.5rem;">${moonPhase.emoji}</div>`;
            interpretationHTML += `<div style="font-family: 'Cinzel', serif; color: var(--gold-accent); font-size: 1.2rem; margin-bottom: 0.5rem;">${moonPhase.name}</div>`;
            interpretationHTML += `<div style="color: var(--moonlight); font-style: italic;">${moonPhase.description}</div>`;
            interpretationHTML += `</div>`;
            
            // User's intention if provided
            if (userIntention) {
                interpretationHTML += `<p style="font-style: italic; color: var(--aether-glow); border-left: 3px solid var(--gold-accent); padding-left: 1rem; margin: 1.5rem 0;">Your Intention: ${userIntention}</p>`;
            }
            
            // Card by card interpretation
            drawnCards.forEach((card, index) => {
                const meaning = card.isReversed ? card.reversed : card.upright;
                interpretationHTML += `<div style="margin: 2rem 0; padding: 1.5rem; background: rgba(26, 26, 46, 0.5); border-radius: 8px; border-left: 3px solid var(--gold-accent);">`;
                interpretationHTML += `<div style="font-family: 'Cinzel', serif; color: var(--gold-accent); font-size: 1.1rem; margin-bottom: 0.5rem;">${currentSpread.positions[index]}</div>`;
                interpretationHTML += `<div style="color: var(--moonlight); font-size: 1.2rem; margin-bottom: 0.75rem;">${card.name}${card.isReversed ? ' (Reversed)' : ''}</div>`;
                interpretationHTML += `<p style="color: var(--starlight);">${meaning}</p>`;
                interpretationHTML += `</div>`;
            });
            
            // Weaving section - Path of Aether lens
            interpretationHTML += `<div style="margin-top: 2.5rem; padding-top: 2rem; border-top: 1px solid var(--aether-glow);">`;
            interpretationHTML += `<h4 style="font-family: 'Cinzel', serif; color: var(--gold-accent); margin-bottom: 1rem;">Weaving the Threads</h4>`;
            interpretationHTML += `<p>These cards speak to where you are in this moment. Each offers insight into the question you brought to the reading. The meanings are traditional; your interpretation makes them personal.</p>`;
            interpretationHTML += `<p>Consider how these themes interact with each other. What patterns emerge? What calls for your attention? What wants to transform?</p>`;
            interpretationHTML += `<p style="margin-top: 1.5rem; font-style: italic; color: var(--moonlight);">Ritual suggestion: Journal on what each card stirs in you. Let the cards be mirrors, not prescriptions. The wisdom you seek is already within you.</p>`;
            interpretationHTML += `</div>`;
            
            // Crystal recommendations
            if (crystals.length > 0) {
                interpretationHTML += `<div class="crystal-section">`;
                interpretationHTML += `<h4>💎 Crystal Companions</h4>`;
                interpretationHTML += `<p style="color: var(--moonlight); margin-bottom: 1rem;">These crystals support the energy of this reading:</p>`;
                interpretationHTML += `<div class="crystal-grid">`;
                crystals.forEach(crystal => {
                    interpretationHTML += `<div class="crystal-card">`;
                    interpretationHTML += `<div class="crystal-name">${crystal.name}</div>`;
                    interpretationHTML += `<div class="crystal-property">${crystal.property}</div>`;
                    interpretationHTML += `<div class="crystal-use">${crystal.use}</div>`;
                    interpretationHTML += `</div>`;
                });
                interpretationHTML += `</div>`;
                interpretationHTML += `</div>`;
            }
            
            interpretationHTML += '</div>';
            
            // Slight delay for effect
            setTimeout(() => {
                interpretationArea.innerHTML = interpretationHTML;
            }, 800);
        }
        
        function resetReading() {
            document.getElementById('spreadSelection').classList.remove('hidden');
            document.getElementById('empowermentArea').classList.add('hidden');
            document.getElementById('readingArea').classList.add('hidden');
            document.getElementById('interpretationArea').classList.add('hidden');
            currentSpread = null;
            drawnCards = [];
            shuffleCount = 0;
            userIntention = '';
        }
    </script>
</body>
</html>
